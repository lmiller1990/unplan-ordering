<div class="ui top menu">
  <%= link_to root_path, class: 'item' do %>
    <%= t :unplan_ordering_system %>
  <% end %>

  <%= link_to new_order_path, class: 'item' do %>
    New Order
  <% end %>

  <% if !session[:current_order_id].nil? %>
    <%= link_to order_path(Order.find(session[:current_order_id])), title: 'Current Order', class: 'item' do %>
      Current Order
    <% end %>
  <% end %>

  <div class="right menu">
    <%= link_to new_product_path, class: 'item' do %>
      New Product
    <% end %>

    <%= link_to products_path, class: 'item' do %>
      View All Products
    <% end %>
  </div>

</div>
