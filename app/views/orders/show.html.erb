<h2>Update Order for <%= @order.created_at.strftime("%A") %>,
  <%= @order.created_at.strftime("%x") %> </h2>

<%= semantic_form_for(@order, html: { class: 'ui form' }, remote: true) do |f| %>
  <div class="ui segment">
    <%= f.semantic_fields_for :products, @order.products do |p| %>

        <%= p.inputs do %>
        <div class="four fields">
          <%= p.input :name, input_html: { readonly: true }, wrapper_html: { class: 'three wide field'} %>
          <%= p.input :theshold_to_order, input_html: { readonly: true }, wrapper_html: { class: 'three wide field'} %>
          <%= p.input :desired_total, input_html: { readonly: true }, wrapper_html: { class: 'three wide field'} %>
          <%= p.input :in_stock, wrapper_html: { class: 'three wide field'} %>
        </div>
        <% end %>
        <br />
    <% end %>
  </div>
  <%= f.action :submit, button_html: { class: 'small right floated ui blue submit button' } %>
<% end %>

<%= semantic_form_for(@shopping_list, remote: true) do |f| %>
  <%= f.action :submit, button_html: { onclick: "$('#order_submit_action').submit()", class: 'small left floated ui green submit button' }%>
<% end %>
